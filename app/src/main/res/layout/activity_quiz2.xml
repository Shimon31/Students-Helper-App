<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz2"
    android:background="#332E73"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Independence Of Bangladesh "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radiogroup2id"
        android:layout_margin="20dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16 December"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/id1btnid"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 February"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/id2btnid"
            /> <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="26 March"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/id3btnid"
        />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 February"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/id4btnid"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/previousbtnid"
            android:layout_margin="10dp"
            android:onClick="previousbtnfunction"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:id="@+id/nextbtnid"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:onClick="nextbtnfunction"/>
    </LinearLayout>
</LinearLayout>
